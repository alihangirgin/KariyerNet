@model List<GetJobAdvertisementsToCompanyViewModel>
@{
    ViewData["Title"] = "GetJobAdvertisements";
}

<h1>İlanlar</h1>


<div class="row">
    <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/GetJobAdvertisements">
        Yayındakiler
    </a>
    <a class="btn btn-dark d-flex justify-content-between align-items-center" href="/CompanyDetail/GetJobAdvertisementsPassive">
        Pasifler
    </a>
    <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/GetJobAdvertisementDraft">
        Taslaklar
    </a>
</div>


<div class="row">
    <div class="col-4 border">
        <a class="btn btn-light d-flex justify-content-between align-items-center" href="/JobAdvertisement/AddJobAdvertisement">
            İlan Ver
        </a>
        <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/GetJobAdvertisements">
            İlanlar
        </a>
        <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/GetJobApplies">
            Başvurular
        </a>
        <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/GetUserCurriculumVitaes">
            Özgeçmiş Havuzu
        </a>
        <a class="btn btn-light d-flex justify-content-between align-items-center" href="/CompanyDetail/EditCompanyDetail">
            Ayarlar
        </a>
    </div>

    @foreach (var item in Model)
    {

        <a class="btn btn-light d-flex justify-content-between align-items-center" asp-area="" asp-controller="JobAdvertisement" asp-action="GetJobAdvertisementToCompany" asp-route-jobAdvertisementId="@item.JobAdvertisementId">
            @item.JobTitle
            Yayınlanma Tarihi:@item.CreateDate
            Görüntülenme Sayısı:@item.ViewCount
            Başvuru Sayısı:@item.numberOfApplies
        </a>
        <a class="btn btn-light d-flex justify-content-between align-items-center" asp-area="" asp-controller="JobAdvertisement" asp-action="EditJobAdvertisement" asp-route-jobAdvertisementId="@item.JobAdvertisementId">
            İlanı düzenle
        </a>
    }



</div>